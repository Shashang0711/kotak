<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kotak Bank Statement Generator</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #ffffff 0%, #ffffff 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            border-radius: 10px;
            border: 1px solid #000000;
            padding: 20px;
        }

        h2 {
            color: #3d3787;
            text-align: center;
            margin-bottom: 10px;
            font-size: 28px;
        }

        .subtitle {
            text-align: center;
            color: #666;
            margin-bottom: 30px;
            font-size: 14px;
        }

        .upload-section {
            background: #f5f5f5;
            border: 2px dashed #677fea;
            border-radius: 8px;
            padding: 10px 10px;
            margin-bottom: 10px;
            text-align: center;
        }

        .upload-section h3 {
            color: #3d3787;
            margin-bottom: 10px;
            font-size: 18px;
        }

        .upload-area {
            position: relative;
            display: inline-block;
            width: 100%;
            max-width: 300px;
        }

        .upload-area input[type="file"] {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
            z-index: 2;
        }

        .upload-btn {
            display: inline-block;
            padding: 15px 40px;
            background: #677fea;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s;
            font-size: 16px;
            font-weight: 600;
            width: 100%;
            box-sizing: border-box;
            pointer-events: none;
        }

        .upload-btn:hover {
            background: #5468d2;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 102, 204, 0.4);
        }

        .upload-status {
            margin-top: 10px;
            font-size: 14px;
            color: #666;
        }

        .upload-status.success {
            color: #4caf50;
        }

        .upload-status.error {
            color: #f44336;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 600;
            font-size: 14px;
        }

        input[type="text"],
        input[type="number"],
        input[type="date"],
        textarea {
            width: 100%;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 5px;
            font-size: 14px;
            transition: border-color 0.3s;
            font-family: Arial, sans-serif;
        }

        input[type="text"]:focus,
        input[type="number"]:focus,
        input[type="date"]:focus,
        textarea:focus {
            outline: none;
            border-color: #0066cc;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .form-row-3 {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 20px;
        }

        button[type="submit"] {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            margin-top: 10px;
        }

        button[type="submit"]:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 102, 204, 0.4);
        }

        button[type="submit"]:active {
            transform: translateY(0);
        }

        #previewBtn {
            background: #4caf50;
        }

        #previewBtn:hover {
            background: #45a049;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(76, 175, 80, 0.4);
        }

        .section-title {
            color: #3d3787;
            font-size: 18px;
            margin: 30px 0 15px 0;
            padding-bottom: 10px;
            border-bottom: 2px solid #e0e0e0;
        }

        .section-title:first-of-type {
            margin-top: 0;
        }

        .helper-text {
            font-size: 12px;
            color: #666;
            margin-top: 4px;
        }

        @media (max-width: 768px) {
            body {
                padding: 10px;
            }

            .container {
                padding: 25px 20px;
                border-radius: 8px;
            }

            h2 {
                font-size: 22px;
            }

            .form-row {
                grid-template-columns: 1fr;
                gap: 0;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>üè¶ Kotak Bank Statement Generator</h2>
        <p class="subtitle">Upload existing PDF to auto-fill or fill manually</p>

        <!-- PDF Upload Section -->
        <div class="upload-section">
            <h3>üìÑ Upload Existing Bank Statement (Optional)</h3>
            <p style="color: #666; font-size: 13px; margin-bottom: 20px;">Upload your bank statement PDF to
                automatically extract and fill account information</p>
            <div class="upload-area">
                <input type="file" id="pdfFile" accept=".pdf"
                    style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; opacity: 0; cursor: pointer; z-index: 10;">
                <div class="upload-btn">üìÅ Choose PDF File</div>
            </div>
            <div class="upload-status" id="uploadStatus" style="margin-top: 15px; min-height: 20px;"></div>
        </div>

        <form method="POST" action="/generate" id="statementForm">
            <div class="section-title">Bank Information</div>

            <div class="form-group">
                <label for="bank">Bank Name *</label>
                <input type="text" id="bank" name="bank" value="Kotak Mahindra Bank" required>
            </div>

            <div class="form-group">
                <label for="name">Account Holder Name *</label>
                <input type="text" id="name" name="name" placeholder="e.g., Patil Bhushan Dhanraj" required>
            </div>

            <div class="form-group">
                <label for="address">Address *</label>
                <textarea id="address" name="address" rows="4"
                    placeholder="Enter address (4 lines for statement format)"
                    style="width: 100%; padding: 12px; border: 2px solid #e0e0e0; border-radius: 5px; font-size: 14px; transition: border-color 0.3s; resize: vertical; font-family: Arial, sans-serif;"
                    required></textarea>
                <div class="helper-text">Enter address in 4 lines (one line per row) or leave as single line for
                    auto-formatting</div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="acc">Account Number *</label>
                    <input type="text" id="acc" name="acc" placeholder="e.g., 00000040489471894" required>
                </div>

                <div class="form-group">
                    <label for="ifsc">IFSC Code *</label>
                    <input type="text" id="ifsc" name="ifsc" placeholder="e.g., SBIN0018710" required>
                </div>
            </div>

            <div class="form-group">
                <label for="branch">Branch Name *</label>
                <input type="text" id="branch" name="branch" placeholder="e.g., NEW CITY LIGHT, SURAT" required>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="accountDescription">Account Description</label>
                    <input type="text" id="accountDescription" name="accountDescription"
                        placeholder="e.g., LOTUS SAVING BANK-ADHAR- CHQ">
                </div>

                <div class="form-group">
                    <label for="cifNo">CIF Number *</label>
                    <input type="text" id="cifNo" name="cifNo" placeholder="e.g., 91474085546" required>
                </div>
            </div>

            <div class="form-row-3">
                <div class="form-group">
                    <label for="micr">MICR Code</label>
                    <input type="text" id="micr" name="micr" placeholder="e.g., 395002041">
                </div>

                <div class="form-group">
                    <label for="ckycr">CKYCR Number</label>
                    <input type="text" id="ckycr" name="ckycr" placeholder="e.g., XXXXXXXXXX4188">
                </div>

                <div class="form-group">
                    <label for="nominationRegistered">Nomination *</label>
                    <input type="text" id="nominationRegistered" name="nominationRegistered" placeholder="Enter name" required>
                </div>
            </div>

            <div class="form-row-3">
                <div class="form-group">
                    <label for="drawingPower">Drawing Power</label>
                    <input type="number" id="drawingPower" name="drawingPower" step="0.01" placeholder="0.00">
                </div>

                <div class="form-group">
                    <label for="interestRate">Interest Rate (% p.a.)</label>
                    <input type="number" id="interestRate" name="interestRate" step="0.01" placeholder="2.5">
                </div>

                <div class="form-group">
                    <label for="modBalance">MOD Balance</label>
                    <input type="number" id="modBalance" name="modBalance" step="0.01" placeholder="0.00">
                </div>
            </div>

            <div class="section-title">Statement Period</div>

            <div class="form-row">
                <div class="form-group">
                    <label for="from">From Date *</label>
                    <input type="date" id="from" name="from" required>
                </div>

                <div class="form-group">
                    <label for="to">To Date *</label>
                    <input type="date" id="to" name="to" required>
                </div>
            </div>

            <div class="section-title">Salary & Transaction Details</div>


            <div class="form-row">
                <div class="form-group">
                    <label for="companyName">Company Name (Optional)</label>
                    <input type="text" id="companyName" name="companyName" placeholder="e.g., Tech Solutions Pvt Ltd">
                    <div class="helper-text">Company name for salary credit (required if salary is set)</div>
                </div>

                <div class="form-group">
                    <label for="salaryBankName">Salary Bank Name (Optional)</label>
                    <select id="salaryBankName" name="salaryBankName"
                        style="width: 100%; padding: 12px; border: 2px solid #e0e0e0; border-radius: 5px; font-size: 14px; transition: border-color 0.3s; font-family: Arial, sans-serif;">
                        <option value="">Select Bank</option>
                        <option value="SBIN">State Bank of India (SBIN)</option>
                        <option value="HDFC">HDFC Bank (HDFC)</option>
                        <option value="ICIC">ICICI Bank (ICIC)</option>
                        <option value="AXIS">Axis Bank (AXIS)</option>
                        <option value="BARB">Bank of Baroda (BARB)</option>
                        <option value="PUNB">Punjab National Bank (PUNB)</option>
                        <option value="CNRB">Canara Bank (CNRB)</option>
                        <option value="BOI">Bank of India (BOI)</option>
                        <option value="BKID">Bank of India (BKID)</option>
                        <option value="UTIB">Axis Bank (UTIB)</option>
                        <option value="YESB">Yes Bank (YESB)</option>
                        <option value="IDFB">IDFC First Bank (IDFB)</option>
                        <option value="KKBK">Kotak Mahindra Bank (KKBK)</option>
                        <option value="INDB">IndusInd Bank (INDB)</option>
                    </select>
                    <div class="helper-text">Bank name for salary credit transaction</div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="salaryDate">Salary Date (Day of Month) (Optional)</label>
                    <input type="number" id="salaryDate" name="salaryDate" min="1" max="31" value="1">
                    <div class="helper-text">Day of month when salary is credited (1-31)</div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="opening">Opening Balance *</label>
                    <input type="number" id="opening" name="opening" step="0.01" placeholder="0.00" required>
                </div>

                <div class="form-group">
                    <label for="salary">Monthly Salary (Optional)</label>
                    <input type="number" id="salary" name="salary" step="0.01" placeholder="0.00">
                    <div class="helper-text">Leave empty if you don't want salary transactions</div>
                </div>
            </div>

            <div class="form-group">
                <label for="closingBalance">Closing Balance (Optional)</label>
                <input type="number" id="closingBalance" name="closingBalance" step="0.01" placeholder="0.00">
                <div class="helper-text">If provided, transactions will be adjusted to match this closing balance</div>
            </div>

            <div class="form-group">
                <label for="filename">PDF Filename (Optional)</label>
                <input type="text" id="filename" name="filename" placeholder="e.g., Bank_Statement_2025"
                    maxlength="100">
                <div class="helper-text">Custom filename for the PDF (without .pdf extension)</div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="debitLimit">Monthly Debit Transactions</label>
                    <input type="number" id="debitLimit" name="debitLimit" min="1" max="100" value="8">
                    <div class="helper-text">Number of debit transactions per month (default: 8)</div>
                </div>

                <div class="form-group">
                    <label for="creditLimit">Monthly Credit Transactions</label>
                    <input type="number" id="creditLimit" name="creditLimit" min="1" max="100" value="10">
                    <div class="helper-text">Number of credit transactions per month (default: 10)</div>
                </div>
            </div>



            <div style="display: flex; gap: 20px; margin-top: 10px;">
                <button type="submit" formaction="/preview-html" formtarget="_blank"
                    style="flex: 1; background: #4caf50; color: white; border: none; border-radius: 5px; font-size: 16px; font-weight: 600; cursor: pointer; transition: transform 0.2s, box-shadow 0.2s; padding: 15px;">Preview
                </button>
                <button type="submit" style="flex: 1; width: 100%;">üìÑ Generate & Download PDF</button>
            </div>
        </form>
    </div>

    <script>
        // PDF Upload Handler
        document.getElementById('pdfFile').addEventListener('change', async function (e) {
            const file = e.target.files[0];
            if (!file) return;

            const statusEl = document.getElementById('uploadStatus');
            statusEl.textContent = 'Extracting information...';
            statusEl.className = 'upload-status';

            const formData = new FormData();
            formData.append('pdfFile', file);

            try {
                const response = await fetch('/upload-pdf', {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();

                if (!response.ok) {
                    console.error('Upload error:', data);
                    throw new Error(data.details || data.error || 'Upload failed');
                }

                console.log('Extracted data:', data);

                // Auto-fill form fields
                // Auto-fill form fields
                if (data.name) {
                    const el = document.getElementById('name');
                    if (el) el.value = data.name;
                }
                if (data.accountNumber) {
                    const el = document.getElementById('acc');
                    if (el) el.value = data.accountNumber;
                }
                if (data.branch) {
                    const el = document.getElementById('branch');
                    if (el) el.value = data.branch;
                }
                if (data.ifsc) {
                    const el = document.getElementById('ifsc');
                    if (el) el.value = data.ifsc;
                }
                if (data.address) {
                    const el = document.getElementById('address');
                    if (el) el.value = data.address;
                }
                if (data.crn) {
                    // Try to find CRN or CIF field
                    const el = document.getElementById('crn') || document.getElementById('cifNo');
                    if (el) el.value = data.crn;
                }
                if (data.micr) {
                    const el = document.getElementById('micr');
                    if (el) el.value = data.micr;
                }
                if (data.nominee) {
                    const el = document.getElementById('nominee') || document.getElementById('nominationRegistered');
                    if (el) el.value = data.nominee;
                }
                if (data.accountType) {
                    const el = document.getElementById('accountType') || document.getElementById('accountDescription');
                    if (el) el.value = data.accountType;
                }

                // Auto-fill dates if available
                if (data.fromDate) document.getElementById('from').value = data.fromDate;
                if (data.toDate) document.getElementById('to').value = data.toDate;

                // Auto-fill opening balance if available
                if (data.openingBalance) {
                    document.getElementById('opening').value = data.openingBalance;
                }

                // Auto-fill closing balance if available
                if (data.closingBalance) {
                    document.getElementById('closingBalance').value = data.closingBalance;
                }

                statusEl.textContent = '‚úì Information extracted successfully! All fields have been auto-filled.';
                statusEl.className = 'upload-status success';

            } catch (error) {
                console.error('Error:', error);
                statusEl.textContent = '‚úó ' + (error.message || 'Failed to extract information. Please fill manually.');
                statusEl.className = 'upload-status error';
            }
        });

        document.getElementById('statementForm').addEventListener('submit', function (e) {
            const from = new Date(document.getElementById('from').value);
            const to = new Date(document.getElementById('to').value);

            if (to < from) {
                e.preventDefault();
                alert('To Date must be after From Date');
                return false;
            }
        });
    </script>
</body>

</html>